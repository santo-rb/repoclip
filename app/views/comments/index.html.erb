<%= turbo_frame_tag "comframe" do %>
  <%= javascript_include_tag "cj", async: true %>
  <div class="divider"></div>
  <h6 class="pt-1" id="ccount"><%= pluralize(@video.comments.count, "Comment") %></h6>
  <div class="p-relative" id="comzone">
    <div id="comments" class="column col-12" style="width:96.4%;">
      <%= render @comments %>
    </div>
  </div>
  <% if @pagination.total_pages > 1 %>
    <div class="d-flex">
      <% if @pagination.previous_page? %>
        <%= link_to "First", video_comments_path(page: 1), class: "p-2 decor" %>
        <%= link_to video_comments_path(page: @pagination.previous_page), class: "p-2 decor" do %>
          <i class="icon icon-arrow-left"></i>
          <span>Previous</span>
        <% end %>
      <% else %>
        <p class="p-2">First</p>
        <p class="p-2"><i class="icon icon-arrow-left"></i> Previous</p>
      <% end %>
      <p class="p-2"><%= "Page #{@pagination.page} of #{@pagination.total_pages}" %></p>
      <% if @pagination.next_page? %>
        <%= link_to video_comments_path(page: @pagination.next_page), class: "p-2 decor" do %>
          <span>Next</span>
          <i class="icon icon-arrow-right"></i>
        <% end %>
        <%= link_to "Last", video_comments_path(page: @pagination.total_pages), class: "p-2 decor" %>
      <% else %>
        <p class="p-2">Next <i class="icon icon-arrow-right"></i></p>
        <p class="p-2">Last </p>
      <% end %>
    </div>
  <% end %>
<% end %>
