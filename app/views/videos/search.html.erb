  </div>
  <p class="empty-title h5"><span>Sorry, we couldn't find any results.</span><span class="d-inline-block"></span></p>
  <p class="empty-subtitle">Try another search?</p>
  <div class="empty-action">
    <%= form_with url: "/search", method: :get, class: "fullw" do |form| %>
      <div class="input-group input-inline">
        <%= form.text_field :query, id: "query2", class: "form-input searchbox", placeholder: "search" %>
        <%= button_tag class: "searchbtn" do %><i class="icon icon-search"></i><% end %>
      </div>
    <% end %>
  </div>
</div>
<% else %>
  <div class="hero hero-sm bg-primary break"><div class="hero-body"><h1 class="mx-2 p-04"><%= pluralize(@pagination.count, "result") + " found" %></h1></div></div>
  <div class="scontainer">
  <div id="grid" class="p-2 mx-8 slidex">
    <%= render "grid" %>
  <% if @pagination.next_page? %>
    <%= turbo_frame_tag :pagination, loading: :lazy, src: search_path(format: :turbo_stream, query: params[:query], page: @pagination.next_page) %>
  <% end %>
  </div>
<% end %>
  </div>
<button class="btn btn-primary btn-action btn-lg s-circle" id="up"><i class="icon icon-upward"></i></button>
</div>
<template data-controller="upward"></template>
