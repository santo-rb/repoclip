  </linearGradient></defs>
 <g id="p" fill="none" stroke="url(#b)" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10">
  <line id="q" x1="23.43" x2="21.214" y1="23.401" y2="21.186"/>
  <path id="r" d="m29.914 27.086-3.5-3.5c-.756-.756-2.072-.756-2.828 0-.378.378-.586.88-.586 1.414s.208 1.036.586 1.414l3.5 3.5c.378.378.88.586 1.414.586s1.036-.208 1.414-.586.586-.88.586-1.414-.208-1.036-.586-1.414z"/>
